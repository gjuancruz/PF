generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Status {
  CREATED
  PROCESSING
  CANCELLED
  COMPLETED
}

model Comment {
  id       String @id @default(uuid()) @db.Uuid
  Text     String @db.Text
  movieId  String @db.Uuid
  movie    Movie  @relation(fields: [movieId], references: [id])
}

model Feedback {
  id       String @id @default(uuid()) @db.Uuid
  Text     String @db.Text
  userId   String @db.Uuid
  user     User @relation(fields: [userId], references: [id])
}

model Movie {
  id       String @id @default(uuid()) @db.Uuid
  Title    String @db.Text
  Plot     String @db.Text
  Genre    String @db.Text
  Actors   String @db.Text
  Language String @db.Text
  Director String @db.Text
  Release  String @db.Text
  Poster   String @db.Text
  Rated    String @db.Text
  Type     String @db.Text
  Trailer  String @db.Text
  Runtime  Int
  show     Show[]
  comments Comment[]
}

model Room {
  id     Int      @id
  seat   Seat[]
  show   Show[]
  ticket Ticket[]
}

model Sale {
  id     Int      @id
  userId String   @db.Uuid
  user   User     @relation(fields: [userId], references: [id])
  ticket Ticket[]
}

model Seat {
  id     Int     @id
  roomId Int
  room   Room    @relation(fields: [roomId], references: [id])
  ticket Ticket?
}

model Show {
  id      Int      @id
  roomId  Int
  movieId String   @db.Uuid
  movie   Movie    @relation(fields: [movieId], references: [id])
  room    Room     @relation(fields: [roomId], references: [id])
  ticket  Ticket[]
}

model Ticket {
  id     Int  @id
  seatId Int  @unique
  roomId Int
  saleId Int
  showId Int
  room   Room @relation(fields: [roomId], references: [id])
  sale   Sale @relation(fields: [saleId], references: [id])
  seat1  Seat @relation(fields: [seatId], references: [id])
  show   Show @relation(fields: [showId], references: [id])
}

model User {
  id       String @id @db.Uuid
  username String @db.Char(20)
  password String @db.Char(20)
  role     Int
  sale     Sale[]
  feedback Feedback[]
}

